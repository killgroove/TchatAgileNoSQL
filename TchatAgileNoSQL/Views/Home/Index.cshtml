@{
    ViewBag.Title = "Page d'accueil";
}

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/Images/message.jpeg" alt="Simple" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Communiquer. Simple. Efficace.
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/protection.jpeg" alt="Protection" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Vos données sont protégées et jamais exploitées.
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/performance.jpeg" alt="Performance" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Des performances sans comparaison.
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="myTchat" style="text-align:center">
        <button type="button" class="btn btn-primary btn-lg btn-block"
                onclick="@("window.location.href='" + @Url.Action("Index", "Tchat") + "'");">
            Essayer anonymement !
        </button>
    </div>